    <script>
      var sizeofArray = 0;
      var answer =[];
      function submit()
      {
        console.log("hello");
      }

      function resetAnswer(quesNo)
      {
        var i = 0;
        var op1 = document.getElementById(i+"1").checked
        var op2 = document.getElementById(i+"2").checked
        var op3 = document.getElementById(i+"3").checked
        var op4 = document.getElementById(i+"4").checked
        for (i = 0; i < answer.length; i++)
        {
          if (answer[i].question == quesNo)
          {
            answer[i].score = 0;
          }
        }
      }

      function checkAnswer(quesNo, ans,size)
      {
        sizeofArray = size;
        console.log(quesNo);
        var i = quesNo;
        var score = 0;
        var yourAns = 0;
        //var questNo = document.getElementById("FormulaText").value
        var op1 = document.getElementById(i+"1").checked
        var op2 = document.getElementById(i+"2").checked
        var op3 = document.getElementById(i+"3").checked
        var op4 = document.getElementById(i+"4").checked
        if (op1 != false)
        {
          yourAns = 1;
          if (ans == 1)
              score = 1;
        }
        if (op2 != false)
        {
          yourAns = 2;
          if (ans == 2)
              score = 1;
        }
        if (op3 != false )
        {
          yourAns = 3;
          if (ans == 3)
              score = 1;
        }
        if (op4 != false)
        {
          yourAns = 4;
          if (ans == 4)
              score = 1;
        }
        console.log(score, ans);
         //create new entity in list
         flag = 0;
          for (i = 0; i < answer.length; i++)
          {
            if (answer[i].question == quesNo)
            {
              flag = 1;
            }
          }
          if (flag == 0)
          {
            answer.push({question: i, yourAns: yourAns, ans: ans, score: score})
          }
          else 
          {
              for (i = 0; i < answer.length; i++)
              {
                if (answer[i].question == quesNo)
                {
                  answer[i].yourAns = yourAns;
                  answer[i].score = score;
                }
              } 
          }

        //ends
         i = 0, score = 0;
        for (i = 0; i < answer.length; i++)
        {
          score += answer[i].score;
        }
        console.log(score);
        document.getElementById("putScore").innerHTML = score;
        document.getElementById("putScore").value = score;

        document.getElementById("scores").innerHTML = score;
        document.getElementById("totalq").innerHTML = answer.length;
      }

          
          // Set the seconds we're counting down to
          var distance =7;
          distance = distance*1000;
          // Update the count down every 1 second
          var x = setInterval(function() {

            // Reduce by 1 second
            distance = distance-1000;

            // Time calculations for days, hours, minutes and seconds
            var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            var seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // Display the result in the element with id="time"
            document.getElementById("timer").innerHTML = hours + "h "
            + minutes + "m " + seconds + "s ";

            // If the count down is finished, write some text
            if (distance < 0) {
              clearInterval(x);
              var i = 0;
              console.log(sizeofArray);
              for (i = 0; i < sizeofArray; i++)
              {
                document.getElementById("setButton"+i).disabled = true;
                document.getElementById("resetButton"+i).disabled = true;
              } 
              document.getElementById("timer").innerHTML = "Time Over";
              
            }
          }, 1000);

        
      
    </script>

